@model IEnumerable<ContactoModel>

@{
    ViewData["Title"] = "Listagem de Contactos";
}

<div class="text-center ">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="contacto" asp-action="Criar">Adicionar Novo Contacto</a>
    </div>
    <br />
    <h1 class="display-4">Listagem de Contactos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Contacto</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach (var contacto in Model)
                {
                    <tr>
                        <th scope="row">@contacto.Id</th>
                        <td>@contacto.Nome</td>
                        <td>@contacto.Email</td>
                        <td>@contacto.Telefone</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-controller="Contacto" asp-action="editar" asp-route-id="@contacto.Id">Editar</a>
                                <a role="button" class="btn btn-danger" asp-controller="Contacto" asp-action="ApagarConfirmacao" asp-route-id="@contacto.Id">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>

