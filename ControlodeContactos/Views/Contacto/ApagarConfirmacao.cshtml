@model ContactoModel
@{
    ViewData["Title"] = "Confirmação para Apagar Contacto";
}

<div class="text-center">
    <h3>
        Realmente deseja Apagar o Contacto(@Model.Nome)?
    </h3>
</div>

<a class="btn btn-danger w-100 mb-2" role="button" asp-controller="Contacto" asp-route-id="@Model.Id" asp-action="Apagar">Apagar Contacto</a>
<a class="btn btn-secondary w-100" role="button" asp-controller="Contacto" asp-action="Index">Voltar</a>